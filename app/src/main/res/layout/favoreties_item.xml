<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        card_view:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        card_view:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/resimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/restaurent"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/resimage"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open now"
                    android:textSize="@dimen/text_size_16"
                    style="@style/TextStyleLarge.Regular.gray"
                    android:textColor="@color/orange"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    android:text="Dallas House"
                    style="@style/TextStyleLarge.Bold.gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Fuel City - Dallas, Texas"
                    style="@style/TextStyleLarge.Regular.gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Pizza, Burgar, Winges"
                    style="@style/TextStyleLarge.Regular.gray"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="4.2"
                android:layout_marginTop="20dp"
                android:textSize="12dp"
                android:drawableLeft="@drawable/star"
                android:drawablePadding="2dp"
                android:layout_marginRight="10dp"/>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/gray"
                android:layout_below="@+id/resimage"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.8 for two people(approx)"
                android:textSize="@dimen/text_size_14"
                style="@style/TextStyleLarge.Regular.gray"
                android:layout_below="@+id/line"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:textSize="@dimen/text_size_12"
                android:text="Comfort Food | 20 MINS"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>