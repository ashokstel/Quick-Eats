<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt"
        android:layout_below="@+id/relabout"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Chhole Bhature"
        style="@style/TextStyleLarge.Bold.gray"/>
    <LinearLayout
        android:id="@+id/llcontrol"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/relabout"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/txt_minus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/gray"
            android:layout_centerVertical="true"
            android:text="-"
            android:layout_weight="0.5"
            android:paddingRight="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_value"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:paddingTop="4dp"
            android:layout_weight="2.5"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:layout_marginBottom="1dp"
            android:text="1"
            android:textSize="18sp"
            style="@style/TextStyleLarge.Regular.gray"/>

        <TextView
            android:id="@+id/txt_pluse"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray"
            android:paddingRight="10dp"
            android:text="+"
            android:textSize="18sp" />
    </LinearLayout>
    <TextView
        android:layout_alignParentRight="true"
        android:text="5.00"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/relabout"
        android:layout_marginTop="10dp"
        style="@style/TextStyleLarge.Bold.gray"/>
</RelativeLayout>