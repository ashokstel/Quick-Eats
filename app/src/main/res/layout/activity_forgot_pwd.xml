<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_signin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_landing_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

    <!--<ImageView-->
    <!--android:id="@+id/iv_leftarrow_signin"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="left"-->
    <!--android:visibility="gone"-->
    <!--android:minHeight="?attr/actionBarSize"-->
    <!--android:padding="@dimen/back_arrow_padding"-->
    <!--android:src="@drawable/back_arrow_red" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_fifty"
            android:layout_gravity="center"
            android:background="@drawable/logo" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_twenty"
            android:layout_marginRight="@dimen/margin_twenty"

            android:layout_marginBottom="@dimen/margin_ten"
            android:layout_marginTop="@dimen/margin_twenty">

            <ImageView
                android:id="@+id/iv_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_two"
                android:adjustViewBounds="true"
                android:src="@drawable/forgot_bg" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_twenty"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/margin_ten"
                    android:paddingLeft="@dimen/margin_ten">



                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/email_text_height"
                        android:layout_marginLeft="@dimen/margin_ten"
                        android:layout_marginRight="@dimen/margin_ten"
                        android:layout_marginTop="@dimen/margin_five"
                        android:drawableLeft="@drawable/msg"
                        android:background="@android:color/transparent"
                        android:drawablePadding="@dimen/margin_ten"
                        android:gravity="left|center"
                        android:hint="@string/email"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="0"
                        android:textAppearance="@style/TextAppearance.FontPathRegular"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/email_txt_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_one"
                        android:layout_marginLeft="@dimen/margin_ten"
                        android:layout_marginRight="@dimen/margin_ten"
                        android:layout_marginTop="@dimen/margin_five"
                        android:background="@color/gray" />



                </LinearLayout>

            </ScrollView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center">

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="@dimen/btn_next_width"
                    android:layout_gravity="bottom|center"
                    android:background="@drawable/rounded_btn_for_signin"
                    android:gravity="center"
                    android:padding="@dimen/btn_next_padding"
                    android:textAllCaps="true"
                    android:text="Submit"
                    android:textColor="@color/white"
                    style="@style/TextStyleLarge.Bold"/>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>



</RelativeLayout>