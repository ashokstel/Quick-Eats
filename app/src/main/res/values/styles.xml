<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theamGreen</item>
        <item name="colorPrimaryDark">@color/theamGreen</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="TextAppearance.FontPathRegular" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <!--<item name="fontPath">fonts/Roboto-Regular.ttf</item>-->
    </style>

    <style name="TextAppearance.FontPathBold" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <!--<item name="fontPath">fonts/Roboto-Bold.ttf</item>-->
    </style>
    <style name="TextStyleLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>

        <item name="fontPath">SourceSansPro-Regular.ttf</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="TextStyleLarge.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyleLarge.Regular">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextStyleLarge.Bold.white">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyleLarge.Regular.white">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyleLarge.Bold.gray">
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="TextStyleLarge.Regular.gray">
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>
